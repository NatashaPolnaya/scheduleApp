@model List<Discipline>;
<form action="~/Home/CreateDiscipline" method="post" class="form-row justify-content-center">
    <div class="form-row justify-content-center">
        <div class="form-group col-sm-11">
            <label>Дисциплина</label>
            <input name="Name" value="" class="form-control" />
        </div>
        <div class="col-sm-6">
            <input class="btn btn-secondary form-control " type="submit" value="Добавить" />
        </div>
    </div>
</form>
<div class="mt-4 ml-5 mr-5">
    <p class="text-uppercase text-center h1"> Дисциплины </p>
    <table class="table table-hover mt-2">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
        
    </table>


</div>
